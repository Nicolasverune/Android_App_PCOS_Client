<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/q2_-1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:text="quest number 2" />
		<TextView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:text="Bien ou bien ?" />

		<RadioGroup
			android:id="@+id/q2_0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/q2_-1"
			android:orientation="horizontal" >

			<RadioButton
				android:text="Top"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="true"
				android:id="@+id/q2_0_1"
				/>
			<RadioButton
				android:text="TOP TOP"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="false"
				android:id="@+id/q2_0_2"
				/>
			<RadioButton
				android:text="SUper tip top"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="false"
				android:id="@+id/q2_0_3"
				/>
		</RadioGroup>
		<TextView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:text="Bien ou bien ?" />

		<RadioGroup
			android:id="@+id/q2_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/q2_0"
			android:orientation="horizontal" >

			<RadioButton
				android:text="Top "
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="true"
				android:id="@+id/q2_1_1"
				/>
			<RadioButton
				android:text="TOP TOP"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="false"
				android:id="@+id/q2_1_2"
				/>
			<RadioButton
				android:text="SUper tip top"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="false"
				android:id="@+id/q2_1_3"
				/>
		</RadioGroup>
		<Button
			android:id="@+id/quest"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="Next" />
	</LinearLayout>
</ScrollView>