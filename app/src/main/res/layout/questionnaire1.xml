<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/q1_-1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:text="quest number 1" />
		<TextView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:text="How are you ? " />

		<RadioGroup
			android:id="@+id/q1_0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/q1_-1"
			android:orientation="horizontal" >

			<RadioButton
				android:text="Good"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="true"
				android:id="@+id/q1_0_1"
				/>
			<RadioButton
				android:text="Bad"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="false"
				android:id="@+id/q1_0_2"
				/>
		</RadioGroup>
		<TextView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:text="Nice day ?" />

		<RadioGroup
			android:id="@+id/q1_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/q1_0"
			android:orientation="horizontal" >

			<RadioButton
				android:text="Oui"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="true"
				android:id="@+id/q1_1_1"
				/>
			<RadioButton
				android:text="Non"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="false"
				android:id="@+id/q1_1_2"
				/>
		</RadioGroup>
		<TextView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:text="is your family good ?" />

		<RadioGroup
			android:id="@+id/q1_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/q1_1"
			android:orientation="horizontal" >

			<RadioButton
				android:text="yes"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="true"
				android:id="@+id/q1_2_1"
				/>
			<RadioButton
				android:text="No"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:checked="false"
				android:id="@+id/q1_2_2"
				/>
		</RadioGroup>
		<Button
			android:id="@+id/quest"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="Next" />
	</LinearLayout>
</ScrollView>